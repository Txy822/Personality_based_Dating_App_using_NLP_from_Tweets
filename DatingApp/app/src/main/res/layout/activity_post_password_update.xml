<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostPasswordUpdate">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/background_img"
                android:layout_width="412dp"
                android:layout_height="784dp"
                android:scaleType="fitXY"
                android:src="@drawable/background_one"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="-3dp"
                tools:layout_editor_absoluteY="-2dp" />

            <Button
                android:id="@+id/continue_btn"
                android:layout_width="185dp"
                android:layout_height="42dp"
                android:layout_marginBottom="292dp"
                android:onClick="toLogin"
                android:text="Continue"
                android:textColor="@color/white"
                app:backgroundTint="@color/Gray"
                app:layout_constraintBottom_toBottomOf="@+id/background_img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/background_img"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/email_sent_message"
                android:layout_width="317dp"
                android:layout_height="100dp"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:text="Password reset link sent to the following email"
                android:textColor="@color/cardview_light_background"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/email_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.51"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.918" />

            <TextView
                android:id="@+id/email_text"
                android:layout_width="316dp"
                android:layout_height="56dp"
                android:layout_marginBottom="48dp"
                android:gravity="center"
                android:text="email_sent_to"
                android:textColor="@color/cardview_light_background"
                app:layout_constraintBottom_toTopOf="@+id/login_cancel_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>